#yellow start 
	YS="\033[1;33m"
#blue start 
	BS="\033[0;34m"
#color end
	CE="\033[0m"
#red start
	RS="\033[6;31m"
#black start
	BLS="\033[0;30m"
#dark gray start
	DGYS="\033[1;30m"
#light blue start
	LBS="\033[1;34m"
#green start
	GNS="\033[0;32m"
#light green start
	LGNS="\033[1;32m"
#cyan start
	CYS="\033[0;36m"
#light cyan start
	LCYS="\033[1;36m"
#light red start
	DRS="\033[0;31m"
#purple start
	PS="\033[0;35m"
#light purple start
	LPS="\033[1;35m"
#brown start
	BRS="\033[0;33m"
#light gray start
	LGYS="\033[0;37m"
#white start
	WHS="\033[1;37m"
SAS="Error: Invalid API key"
if [[ -f /usr/local/bin/shodan ]]
then
sleep 0.5
     if [[ -f ~/.shodan/api_key ]]
     then
     sleep 0.5
     else
     sleep 0.5
     SHO="PSKINdQe1GyxGgecYz2191H2JoS9qvgD"
     {
     shodan init "$SHO"
     } &> /dev/null
     fi
else
     sleep 0.5
     spinner() 
    { 
     local pid=$! 
     local delay=0.75 
     local spinstr='|/-\' 
     while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do 
      local temp=${spinstr#?} 
      printf ""$BS"Installing dependences..." [%c] " "$spinstr""
      local spinstr=$temp${spinstr%"$temp"} 
      sleep $delay 
      printf "\b\b\b\b\b\b" 
     done 
    } 
     {
     pip install shodan
     } &> /dev/null
sleep 0.5
SHO="PSKINdQe1GyxGgecYz2191H2JoS9qvgD"
{
shodan init "$SHO"
} &> /dev/null
fi

if [[ "$1" = "help" ]]
then
echo -e
echo -e "Usage: copycat [OPTION...]"
echo -e "Copyright (C) 2019, Anna Fet. All Rights Reserved."
echo -e
echo -e  "   host     <host>                View host or IP."
echo -e  "   download <filename> <server>   Download server databases."
echo -e  "   parse    <filename>            Parse downloaded server database."
echo -e  "   explore  <organization>        Explore organization name results."                   
echo -e  "   honeypot <host>                Check whether the IP is a honeypot or not."
echo -e  "   stream                         Stream internat data in real-time."
echo -e  "   radar                          [Shodan] Shodan real-time results."
echo -e  "   help                           Give this help list."
echo -e
exit

elif [[ "$1" = "host" ]]
then
SAS="$2"
clear
echo -e ""$BS"Please wait..."$CE""
shodan host "$SAS"
exit

elif [[ "$1" = "download" ]]
then
SAS="$2"
SIS="$3"
shodan download "$SAS" "$SIS"
exit

elif [[ "$1" = "parse" ]]
then
SAS="$2"
shodan parse "$SAS"
exit

elif [[ "$1" = "explore" ]]
then
SAS="$2"
shodan stats "$SAS"
exit

elif [[ "$1" = "honeypot" ]]
then
SAS="$2"
shodan honeyscore "$SAS"

elif [[ "$1" = "stream" ]]
then
shodan stream

elif [[ "$1" = "radar" ]]
then
shodan radar

fi
